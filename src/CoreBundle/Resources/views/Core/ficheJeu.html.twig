{% extends "CoreBundle::layout.html.twig" %}

{% block title %} {{ jeu.nom }} {% endblock %}

{% block body %}
<section>
	<h2 class="text-center"> {{ jeu.nom }} </h2>
	<div class="row">
		<div class="col-xs-6 col-md-4">
			<a href="#" class="thumbnail">
				<img src="{{ asset( jeu.image.url ) }}" alt="{{ jeu.image.alt }}">
			</a>
		</div>
		<div class="col-xs-6 col-md-6">
		<ul> 
			<li> Editeur : {{ jeu.editeur }} </li>
			<li> Date de sortie en France : {{ jeu.dateSortie|date("d/m/Y") }} </li>
			<li> Genre : {{ jeu.genre}} </li>
			<li> Nombre de joueurs en multi : {{ jeu.nombreJoueurs }} </li>
		</ul>
		</div>
		<div class="col-xs-12 col-md-12">
		<p>
			Description : {{ jeu.description }}
		</p>
		</div>
		<div class="col-xs-12 col-md-12">
